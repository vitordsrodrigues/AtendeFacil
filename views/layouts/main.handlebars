<body>
    <header>
        <nav>
            <div class="container-fluid">
                <a href="/">
                    <img src="/img/logo.png" alt="HoraMarcada" id="logo" class="me-2">
                    <span>HoraMarcada</span>
                </a>
                <ul>
                    {{#if session.userid}}
                        <li><a href="/dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                        <li><a href="/logout"><i class="bi bi-box-arrow-right"></i> Sair</a></li>
                    {{else}}
                        <li><a href="/login"><i class="bi bi-box-arrow-in-right"></i> Login</a></li>
                        <li><a href="/register"><i class="bi bi-person-plus"></i> Registrar</a></li>
                    {{/if}}
                </ul>
            </div>
        </nav>
    </header>
    {{{body}}}

